                    <TextBlock Text="New" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>
            </ToggleButton>
            <ToggleButton x:Name="toggleButtonUpdate" Width="120" Height="50" Click="toggleButtonUpdate_Click">
                <StackPanel Orientation="Horizontal">
