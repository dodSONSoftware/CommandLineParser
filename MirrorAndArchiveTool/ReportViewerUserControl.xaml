            </ToggleButton>
            <Separator Margin="10,0"/>
            <Button x:Name="buttonExport" Width="120" Height="50" Click="buttonExport_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Images\DocumentSave.ico" Width="40" Height="40"/>
                    <TextBlock Text="Export" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>
            </Button>
            <Button Width="120" Height="50" Click="buttonDefaultSort_Click">
                <StackPanel Orientation="Horizontal" >
                    <Image Source="Images\document_refresh.ico" Width="40" Height="40"/>
                    <TextBlock Text="Refresh" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>
            </Button>
        </ToolBar>
        
