                <Canvas Grid.Column="0" Grid.Row="0">
                    <Image Style="{StaticResource styleEnabledDisabledIconImage}"
                           Source="{Binding Path=IsEnabled, Converter={StaticResource IsEnabledToImageConverter}}"/>
