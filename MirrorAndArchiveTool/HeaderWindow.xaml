<Window x:Class="MirrorAndArchiveTool.HeaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="700" Height="420"
        MinWidth="640" MinHeight="325"
        WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" ResizeMode="CanResizeWithGrip" ShowInTaskbar="False"
        KeyUp="Window_KeyUp">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="48"/>
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid x:Name="gridContentHolder"/>
        </ScrollViewer>
        <Separator HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="0,0"/>
        <Button Grid.Row="1" Width="120" Height="28" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10"
                Content="Close" Click="buttonClose_Click"/>
    </Grid>
</Window>
